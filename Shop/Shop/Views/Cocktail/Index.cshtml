@model Shop.Models.Cocktail.SearchCocktailViewModel

<div class="container">

    <form method="post">
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">

                <h2> Name your Cocktail</h2>
                <br />
                <label asp-for="Cocktail" style="font-family:Arial"></label>
                <input asp-for="Cocktail" class="font-control" />
                <span asp-validation-for="Cocktail" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <button asp-controller="Cocktail" asp-action="SearchCocktail" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>

</div>
